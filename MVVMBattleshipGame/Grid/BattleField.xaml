<UserControl x:Class="MVVMBattleshipGame.Grid.BattleField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMBattleshipGame.Grid"
             mc:Ignorable="d"
             Width="400"
             Height="400"
             x:Name="BattleFieldRoot"
             d:DataContext="{d:DesignInstance local:BattleFieldGridViewModel, IsDesignTimeCreatable=True}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Grid/CellView.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2 0 0 2" BorderBrush="Gray">
        <ItemsControl ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="10" Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:CellModel}">
                    <Button Style="{StaticResource CellTemplateStyle}"
                            Width="40"
                            Height="{Binding Path=Width, RelativeSource={RelativeSource Self}}"
                            Command="{Binding DataContext.CellClickedCommand, ElementName=BattleFieldRoot}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding CanBeAttacked}"
                            />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>
