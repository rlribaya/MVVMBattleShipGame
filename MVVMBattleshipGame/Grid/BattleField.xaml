<UserControl x:Class="MVVMBattleshipGame.Grid.BattleField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMBattleshipGame.Grid"
             mc:Ignorable="d"
             Width="400"
             Height="400"
             d:DataContext="{d:DesignInstance local:BattleFieldGridViewModel, IsDesignTimeCreatable=True}"
             >
    <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1 0 0 1" BorderBrush="Gray">
        <ItemsControl ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="10" Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:CellModel}">
                    <Border BorderBrush="Gray"
                            BorderThickness="0 1 1 0"
                            Background="Black"
                            Width="40"
                            Height="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}}">
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>
