<Window x:Class="MVVMBattleshipGame.PlacementPhase.PlacementPhaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMBattleshipGame.PlacementPhase" xmlns:grid="clr-namespace:MVVMBattleshipGame.Grid"
        mc:Ignorable="d"
        Title="Battleship Game" Height="500" Width="800">
    <Window.DataContext>
        <local:PlacementPhaseViewModel/>
    </Window.DataContext>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" 
                   Text="PLACE YOUR SHIPS"
                   TextAlignment="Center"
                   FontFamily="Segoe UI Semibold"
                   FontSize="24"
                   Background="#333"
                   Foreground="#E4E4DF"
                   Padding="5"
                   />
        <grid:BattleField DockPanel.Dock="Left"
                          Margin="10"
                          DataContext="{Binding PlayerField}"
            />
        <Grid DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="0 10">
                <TextBlock Text="Currently Placing"
               TextAlignment="Center"
               />
                <TextBlock Text="Destroyer"
               TextAlignment="Center"
               FontFamily="Segoe UI Semibold"
               FontSize="42"
               />
                <TextBlock TextAlignment="Center"
                           FontStyle="Italic">
                    <TextBlock.Text>
                        <Binding Path="CurrentShip.Length"
                                 StringFormat="Length: {0} Tiles"/>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
            <Grid Grid.Row="1" Margin="50">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPartlyPlaced}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--WEST-->
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding PlaceShipCommand}"
                        CommandParameter="{x:Static local:Direction.West}"
                        >
                    <Viewbox Stretch="Uniform">
                        <Path Style="{StaticResource ThickArrowStyle}">
                            <Path.LayoutTransform>
                                <RotateTransform Angle="180"/>
                            </Path.LayoutTransform>
                        </Path>
                    </Viewbox>
                </Button>
                <!--NORTH-->
                <Button Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding PlaceShipCommand}"
                        CommandParameter="{x:Static local:Direction.North}"
                        >
                    <Viewbox Stretch="Uniform">
                        <Path Style="{StaticResource ThickArrowStyle}">
                            <Path.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </Path.LayoutTransform>
                        </Path>
                    </Viewbox>
                </Button>
                <!--EAST-->
                <Button Grid.Row="1" 
                        Grid.Column="2" 
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding PlaceShipCommand}"
                        CommandParameter="{x:Static local:Direction.East}"
                        >
                    <Viewbox Stretch="Uniform">
                        <Path Style="{StaticResource ThickArrowStyle}"/>
                    </Viewbox>
                </Button>
                <!--SOUTH-->
                <Button Grid.Row="2" 
                        Grid.Column="1" 
                        Style="{StaticResource TransparentButtonStyle}"
                        Command="{Binding PlaceShipCommand}"
                        CommandParameter="{x:Static local:Direction.South}"
                        >
                    <Viewbox Stretch="Uniform">
                        <Path Style="{StaticResource ThickArrowStyle}">
                            <Path.LayoutTransform>
                                <RotateTransform Angle="90"/>
                            </Path.LayoutTransform>
                        </Path>
                    </Viewbox>
                </Button>
            </Grid>
            <TextBlock Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       >
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPartlyPlaced}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <TextBlock.Text>
                    <Binding Path="CurrentShip.ShipType"
                             StringFormat="Click on a cell to place the {0}'s end"
                             />
                </TextBlock.Text>
            </TextBlock>
        </Grid>
    </DockPanel>
</Window>
